#!/usr/bin/env raku

use Test;

test-file($_) for dir('tests').sort;

done-testing;

sub test-file($file) {
    my $path = $file.path;

    my $proc = run('./Dolphy', $path, :out, :err);

    is(expected($path), $proc.out.slurp, $path)
        or say $proc.err.slurp;
}

sub expected($path) {
    my $expected;
    for $path.IO.lines -> $line {
        $line ~~ /'##'\s*(\N*)/;
        next unless $0;
        $expected ~= "$0\n";
    }

    return $expected;
}